    <button class="go-back" onclick="window.history.back()"><i class="fa fa-chevron-left" style="font-size:30px;color:#fff;"></i></button>

    <header class="cover post-header">
				{{#if feature_image}}
				<div class="cover-bg" style="background-image: url({{feature_image}})"></div>
				{{/if}}
				<div class="cover-content">
					<div class="inner">
						{{#if tags}}
						<div class="post-page-tags" style="text-align:center;margin-top:0;margin-bottom:15px;">
							{{tags separator=""}}
						</div><!-- .post-tags -->
						{{/if}}
						<h1 class="post-title" style="padding-bottom: 30px;margin-bottom: 30px;">{{title}}</h1>
						<div class="post-meta">
              <span class="post-meta-wrap">{{#if primary_author.profile_image}}<img class="author-avatar" src="{{primary_author.profile_image}}" />{{/if}} <span class="post-author">{{authors}}</span> <time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time></span> <span class="reading-time">Estimate {{reading_time}}</span>

							<!-- by <span class="post-author">{{authors}}</span> on <time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time> <span class="reading-time">Estimate {{reading_time}}</span> -->
						</div><!-- .post-meta -->
						<!-- <a href="#" class="scroll-down square light"><span class="icon-down-custom" aria-hidden="true"></span><span class="screen-reader-text"></span></a> -->
            <div id="scroll-hint" class="header-scroll-hint hide-on-menu">
                <i class="fa fa-chevron-down"></i>
            </div>
					</div><!-- .inner -->
				</div><!-- .cover-content -->
			</header><!-- .cover -->

<main class="content" id="main" role="main">

    <article class="{{post_class}}">

     <section class="post-content">
     <div class="single-post-inner">
        {{content}}
     </div>
    </section>
    </article>
</main>
{{/post}}
